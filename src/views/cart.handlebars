<h1>Carrito</h1>

{{#if products.length}}
  <ul>
    {{#each products}}
      <li>
        <strong>{{this.product.title}}</strong> - {{this.quantity}} u.
        <form action="/api/carts/{{../cartId}}/products/{{this.product._id}}" method="POST" style="display:inline;">
          <input type="number" name="quantity" value="{{this.quantity}}" min="1">
          <button type="submit">Actualizar</button>
        </form>
        <form action="/api/carts/{{../cartId}}/products/{{this.product._id}}?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>El carrito está vacío.</p>
{{/if}}

<a href="/products">Volver a productos</a>
